<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TransparentNavBar" parent="AppTheme">
        <item name="android:navigationBarColor">@color/color_row_bg</item>
    </style>

    <style name="AppTheme.SearchEditText">
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search_24</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="drawableTint">@color/color_search_text</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textColorHint">@color/color_search_text</item>
        <item name="android:layout_margin">@dimen/dp_16</item>
        <item name="android:background">@drawable/rounded_background_grey_solid</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="CardStyle">
        <item name="cardElevation">@dimen/stat_card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/color_row_bg</item>
    </style>
</resources>